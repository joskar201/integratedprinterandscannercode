<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


       <EditText
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_printText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="print Text"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/btn_printBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="print barcode"
            android:textSize="22sp"
             />
        
          <Button
            android:id="@+id/btn_printQRcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="print qrcode"
            android:textSize="22sp" />
        
        <Button
            android:id="@+id/btn_scan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scan"
             android:textSize="22sp"
            />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存" 
             android:visibility="gone"
             android:textSize="22sp"
            />

    </LinearLayout> 
</LinearLayout>

